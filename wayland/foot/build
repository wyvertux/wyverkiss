#!/bin/sh -e

# Avoid scdoc dependency.
sed "/subdir('doc')/d" meson.build > _
mv -f _ meson.build

export DESTDIR="$1"

meson \
    --prefix=/usr \
    --buildtype=release \
    --force-fallback-for=fcft,tllist \
    -Dterminfo=disabled \
    . output

ninja -C output
ninja -C output install

rm -rf \
    "$1/usr/share/doc" \
    "$1/usr/share/zsh" \
    "$1/usr/share/fish" \
    "$1/usr/share/bash-completion"
