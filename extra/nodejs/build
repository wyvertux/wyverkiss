#!/bin/sh -e

# Fix python3.
sed 's|(3, 8)|(3, 9), (3, 8)|g' configure > _
mv -f _ configure
chmod +x configure

# Don't link with libatomic on LLVM systems.
sed "s/\\'libraries\\'\\: \\[\\'-latomic\\'\\],/#/g" node.gyp > _
mv -f _ node.gyp

CC=cc CXX=c++ ./configure \
    --prefix=/usr \
    --shared-zlib \
    --without-intl \
    --without-etw \
    --without-dtrace \
    --without-report \
    --without-node-snapshot \
    --without-node-code-cache \
    --ninja

ninja -C out/Release
tools/install.py install "$1" /usr

# Remove unneeded files.
rm -rf "$1/usr/include/node/openssl" \
       "$1/usr/share/doc" \
       "$1/usr/share/systemtap" \
       "$1/usr/lib/node_modules/npm/scripts" \
       "$1/usr/lib/node_modules/npm/configure"
